<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue pour le wizard de filtrage par date -->
        <record id="view_date_filter_wizard_form" model="ir.ui.view">
            <field name="name">tp.date.filter.wizard.form</field>
            <field name="model">tp.date.filter.wizard</field>
            <field name="arch" type="xml">
                <form string="Afficher les notes par date" class="tp_note_dark">
                    <sheet class="tp_note_card">
                        <div class="alert alert-info" role="alert" style="margin-bottom: 20px;">
                            <i class="fa fa-calendar mr-2"></i>
                            Sélectionnez une date pour afficher toutes les notes créées à cette date
                        </div>
                        
                        <group class="tp_info_group">
                            <field name="date_selection" widget="date" 
                                   options="{'datepicker': {'minDate': false}}" 
                                   class="tp_metadata_field"
                                   placeholder="Sélectionnez une date"/>
                        </group>
                    </sheet>
                    
                    <footer>
                        <button name="action_show_notes_by_date" 
                                type="object" 
                                string="Afficher les notes" 
                                class="btn-primary tp_action_btn"
                                icon="fa-search"/>
                        <button special="cancel" string="Annuler" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Action pour ouvrir le wizard -->
        <record id="action_open_date_filter_wizard" model="ir.actions.act_window">
            <field name="name">Afficher notes par date</field>
            <field name="res_model">tp.date.filter.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'form_view_ref': 'view_date_filter_wizard_form'}</field>
        </record>
                  
    </data>
</odoo>

