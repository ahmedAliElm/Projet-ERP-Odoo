<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue pour les préférences utilisateur dans les paramètres -->
        <record id="view_users_form_tp_preferences" model="ir.ui.view">
            <field name="name">res.users.form.tp.preferences</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="before">
                    <page string="Thème Notes" name="tp_theme_settings">
                        <group string="Préférences du thème">
                            <group string="Apparence">
                                <field name="tp_theme" widget="radio"/>
                                <field name="tp_dark_mode" invisible="tp_theme != 'dark'"/>
                            </group>
                            <group string="Personnalisation">
                                <field name="tp_primary_color" widget="color"/>
                                <field name="tp_font_size"/>
                            </group>
                            <footer>
                                <button name="action_toggle_dark_mode" 
                                        type="object" 
                                        string="Bascule thème" 
                                        class="btn-secondary"/>
                                <button name="action_reset_theme" 
                                        type="object" 
                                        string="Réinitialiser" 
                                        class="btn-outline-secondary"/>
                            </footer>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        
        <!-- Action pour ouvrir les préférences -->
        <record id="action_tp_user_preferences" model="ir.actions.act_window">
            <field name="name">Mes préférences</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_users_form_tp_preferences"/>
            <field name="target">current</field>
            <field name="context">{'form_view_ref': 'base.view_users_form'}</field>
            <field name="res_id" eval="uid"/>
        </record>
        
        <!-- Menu pour accéder aux préférences -->
        <menuitem id="menu_tp_user_preferences" 
                  name="Préférences thème" 
                  parent="base.menu_config"
                  action="action_tp_user_preferences"
                  sequence="100"/>
                  
    </data>
</odoo>

